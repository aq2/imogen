$background = #6cadc952

/// layout
*
  margin 0
  padding 0
  box-sizing border-box

body
  // height 100vh
  // overflow hidden
  background $background
  font-family 'Josefin Sans', sans-serif
  padding 0.5rem

header
  // width 80vw
  display flex
  // text-align center
  // margin-bottom 0.5rem auto
  // margin-top 0.5rem
  justify-content center
  & img
    width 115px
    height 115px
    margin 0 1rem
    border-radius 1rem

main
  // width 98vw
  display flex
  margin 0 auto

.panel
  flex 1
  height 82vh // change in meeja?
  margin 0.5rem
  cursor pointer
  overflow-y auto
  overflow-x hidden
  border-radius 2rem
  background-size cover
  transition flex 0.7s ease
  background-position center
  background-repeat no-repeat
  // display flex
  // flex-direction column

.panel.active
    flex 5

.content
  padding 1rem
  margin 1.5rem 1rem
  border-radius 2rem
  color $contentFore
  background $contentBack
  display flex
  flex-direction column
  align-items center

.blurb
  display none


.blurb.active
  display inline
  // margin 1rem


//end layout

