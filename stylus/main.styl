/// colours

$dru-blue = #6cadc9
$dru-blue-back = #795778 
$dru-orange = #d69c19
$dru-orange-back = #a62923

$background = alpha($dru-blue, 0.34)
$contentBack = alpha($dru-blue, 0.68)

$text = black

//end colours

/// panel images

.panel1
  background-image url('imgs/yoga-class.jpg')

.panel2
  background-image url('imgs/yoga2.jpg')

.panel3
  background-image url('imgs/meditate.jpg')
  
.panel4
  background-image url('imgs/lotus.jpg')

//end panel images

/// layout
*
  margin 0
  padding 0
  box-sizing border-box
  scrollbar-width thin
  scrollbar-color $dru-blue $dru-blue-back
  
*::-webkit-scrollbar
  width 12px
  border-radius 80px

*::-webkit-scrollbar-track
  background $dru-orange
  border-radius 80px

*::-webkit-scrollbar-thumb
  background $dru-blue
  border-radius 80px

body
  color $text
  padding 0.5rem
  overflow-y hidden
  background $background
  font-family 'Josefin Sans', sans-serif

header
  display flex
  align-items flex-end
  justify-content center
  & img
    width 115px
    height 115px
    margin 0 1rem
    border-radius 1rem

.headtitle 
  display flex
  flex-direction column
  justify-content space-between

main
  display flex
  margin 0 auto

.panel
  flex 1
  height 82vh
  margin 0.5rem
  cursor pointer
  overflow-y auto
  overflow-x hidden
  position relative
  border-radius 2rem
  background-size cover
  transition flex 0.7s ease
  background-position center
  background-repeat no-repeat
  &.shown
    flex 5
    cursor default

.title
  top 0
  display flex
  position sticky
  min-height 4rem
  align-items center
  background $dru-blue
  justify-content center

.content
  margin 1rem 1rem
  border-radius 2rem
  padding 1.5rem 1rem
  background $contentBack

.blurb
  display none
  &.shown
    display inline

.flexer
  display flex
  margin-bottom 2rem

.flexer img
  width 200px
  margin-right 2rem
  border-radius 2rem

//end layout

/// typography

h1, h2
  font-family 'Cardo', serif
  
h1 
  font-size 3.5rem
  color $dru-orange-back

h2
  font-size 2rem

header h2
  font-size 2.75rem
  color $dru-blue-back

.title h2
  margin 0.5rem
  text-align center

.content h2
  margin-bottom 0.5rem
  border-top 2px solid $dru-blue

p
  font-size 1.75rem
  margin-bottom 1rem
  
.motto
  display none
  text-align center
  &.shown
    display block
    margin -1rem 0 -2rem 0

.motto p
  font-size 1.25rem

a
  cursor pointer
  font-size 2rem
  padding 0.75rem
  border-radius 1rem
  display inline-block
  background $dru-blue
  text-decoration none
  color $dru-orange-back

a:hover
  transform scale(1.02)
  background $dru-orange

a:active
  transform scale(0.98)

//end typography

/// testimonial

blockquote
  width 90%
  position relative
  border-radius 1rem
  padding 0.25rem 1rem
  margin 0 auto 1.5rem auto
  background alpha($dru-orange, 0.6)

span.quote
  left 1rem
  top -0.5rem
  font-size 7rem
  position absolute
  font-family sans-serif

.testimonial
  margin-top 3rem
  font-size 1.5rem
  font-style italic
  
.punter
  text-align right
  font-size 1.25rem

//end testimonial

/// form

// .form-container
