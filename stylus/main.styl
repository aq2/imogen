/// colours

$topText = black
$contentBack = #333333dd
$contentBack = #795778cc
$contentFore = #eee
$contentFore = #111

$dru-blue = #6cadc9
$dru-blue-back = #795778 
$dru-orange = #d69c19
$dru-orange-back = #a62923

$background = #6cadc952

//end colours

