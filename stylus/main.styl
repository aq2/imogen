/// layout
*
  margin 0
  padding 0
  box-sizing border-box
  scrollbar-width thin
  scrollbar-color $dru-blue $dru-blue-back
  

*::-webkit-scrollbar
  width 12px

*::-webkit-scrollbar-track
  background $dru-orange

*::-webkit-scrollbar-thumb
  background $dru-blue
  border-radius 20px
  border 3px solid blue


body
  padding 0.5rem
  background $background
  font-family 'Josefin Sans', sans-serif

header
  display flex
  justify-content center
  & img
    width 115px
    height 115px
    margin 0 1rem
    border-radius 1rem

main
  display flex
  margin 0 auto

.panel
  flex 1
  height 82vh // change in meeja?
  margin 0.5rem
  cursor pointer
  overflow-y auto
  overflow-x hidden
  border-radius 2rem
  background-size cover
  transition flex 0.7s ease
  background-position center
  background-repeat no-repeat
  position relative
  &.active
    flex 5

.content
  padding 1rem
  margin 1.5rem 1rem
  border-radius 2rem
  color $contentFore
  background $contentBack
  display flex
  flex-direction column
  align-items center

.blurb
  display none
  &.active
    display inline


//end layout

