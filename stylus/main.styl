/// layout
*
  margin 0
  padding 0
  box-sizing border-box
  scrollbar-width thin
  scrollbar-color $dru-blue $dru-blue-back
  
*::-webkit-scrollbar
  width 12px

*::-webkit-scrollbar-track
  background $dru-orange

*::-webkit-scrollbar-thumb
  background $dru-blue
  border-radius 20px
  border 3px solid blue

body
  padding 0.5rem
  background $background
  font-family 'Josefin Sans', sans-serif
  overflow-y hidden

header
  display flex
  justify-content center
  & img
    width 115px
    height 115px
    margin 0 1rem
    border-radius 1rem

.headtitle 
  display flex
  flex-direction column
  justify-content space-between

main
  display flex
  margin 0 auto
  
.success
  text-align center
  margin-top 2rem

.panel
  flex 1
  height 82vh // change in meeja?
  margin 0.5rem
  cursor pointer
  overflow-y auto
  overflow-x hidden
  position relative
  border-radius 2rem
  background-size cover
  transition flex 0.7s ease
  background-position center
  background-repeat no-repeat
  &.active
    flex 5
    cursor default

.content
  margin 1rem 1rem
  color $contentFore
  border-radius 2rem
  padding 1.5rem 1rem
  background $contentBack

.blurb
  display none
  &.active
    display inline

hr
  width 68%

.about
  display flex
  margin-bottom 2rem

.about img
  width 200px
  margin-right 2rem
  border-radius 2rem

//end layout

/// typography

h1, h2
  font-family 'Cardo', serif
  
h1 
  font-size 3.5rem
  color $dru-orange-back
  
.title

.title // eg what is dru
  top 0
  position sticky
  min-height 2.5rem
  // text-align center
  color $contentFore
  // padding-top 0.2rem
  background $dru-blue
  display: flex;
  justify-content: center;
  align-items: center;
  text-align center

header h2
  font-size 2.75rem
  color $dru-blue-back

.content h2
  font-size 2rem
  margin-bottom 1rem

p
  font-size 1.75rem
  margin-bottom 1rem
  
.motto
  display none
  &.shown
    display block
    margin -1rem 0 -2rem 0

.motto p
  font-size 1.25rem
  text-align center

a
  padding 1rem
  cursor pointer
  font-size 2rem
  margin-top 4rem
  color $dru-orange
  display inline-block
  text-decoration none
  background $dru-blue-back

a:hover
  background $dru-blue
  border 1px solid $dru-blue-back

a:active
  transform scale(0.98)

//end typography

/// testimonial

blockquote
  width 90%
  position relative
  border-radius 1rem
  padding 0.25rem 1rem
  margin 0 auto 1.5rem auto
  background alpha($dru-orange, 0.6)

span.quote
  left 1rem
  top -0.5rem
  font-size 7rem
  position absolute
  font-family sans-serif

.testimonial
  margin-top 3rem
  font-size 1.5rem
  font-style italic
  
.punter
  text-align right
  margin-top -1rem
  font-size 1.25rem

//end testimonial

/// form

.form-container
  padding 1rem
  border-radius 2rem
  // background alpha($dru-orange, 0.6)
  background alpha($dru-orange-back, 0.6)
  
.form-control
  position relative
  margin 2rem auto

.form-control input, textarea
  border 0
  width 90%
  padding 1rem
  display block
  font-size 1.5rem
  background transparent
  background $contentBack
  border-radius 1rem 1rem 0 0
  border-bottom 2px $contentFore solid

.form-control input:focus,
.form-control input:valid,
.form-control textarea:focus,
.form-control textarea:valid
  outline 0
  border-bottom-color red

.form-control label
  top 0.5rem
  left 0.5rem
  position absolute

.form-control label span
  min-width 5px
  font-size 1.25rem
  display inline-block

.form-control input:focus + label span,
.form-control input:valid + label span,
.form-control textarea:focus + label span,
.form-control textarea:valid + label span
  color lightblue
  transition 0.3s ease-in
  transform translateY(-2rem)
  transition 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55)

.btn
  border 0
  width 90%
  padding 1rem
  cursor pointer
  font-size 1.5rem
  border-radius 1rem
  // font-family inherit
  // display inline-block
  background $dru-blue
  &:hover
    background $dru-blue-back
    background $dru-orange
  &:active
    transform scale(0.98)

//end form

