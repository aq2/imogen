//   background alpha($dru-orange-back, 0.6)
  
.form-input 
  margin 2rem auto
  position relative

.form-input input, textarea
  border 0
  width 100%
  padding 1rem
  display block
  font-size 1.5rem
  background $contentBack
  border-radius 1rem 1rem 0 0
  border-bottom 2px $dru-blue-back solid

.form-input input:focus,
.form-input input:valid,
.form-input textarea:focus,
.form-input textarea:valid
  outline 0
  border-bottom-color blue

.form-input label
  top 0.5rem
  left 0.5rem
  position absolute

.form-input label span
  min-width 5px
  font-size 1.25rem
  display inline-block

.form-input input:focus + label span,
.form-input input:valid + label span,
.form-input textarea:focus + label span,
.form-input textarea:valid + label span
  // color $dru-blue-back
  transition 0.3s ease-in
  transform translateY(-2rem)
  transition 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55)

.btn
  border 0
  width 90%
  display block
  margin 0 auto
  padding 1rem
  cursor pointer
  font-size 1.5rem
  border-radius 1rem
  background $dru-blue
  &:hover
    transform scale(1.02)
    background $dru-orange
  &:active
    transform scale(0.98)

.success
  margin-top 2rem
  text-align center

//end form

